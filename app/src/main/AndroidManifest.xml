<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todolist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/xdroid_logo_128"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ToDoListMainActivity"
            android:icon="@mipmap/xdroid_logo_128">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".EditToDoItemActivity"
            android:parentActivityName=".ToDoListMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ToDoListMainActivity" />
        </activity>


        <service android:name=".service.ToDoListAlarmService" />

        <receiver android:name=".broadcast.ToDoListAlarmBroadCastReceiver">
            <intent-filter>
                <action android:name="alarmAction" />
            </intent-filter>
        </receiver>

    </application>


